<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

	<!-- 가입자 조회 -->
	<select id="getUserList" resultType="uservo">
		<![CDATA[
			select no, id, gender, location, birth, managerIdentified, shopNo 
			from users 
			order by managerIdentified
		]]>
	</select>

	<!-- 총 가입자 수 조회 -->
	<select id="userConut" resultType="long">
		<![CDATA[
			select count(*) 
			from users
		]]>
	</select>
	
	<!-- 사용자 ID 출력 -->
	<select id="userID" parameterType="long" resultType="uservo">
		<![CDATA[
			select id, no  
			from users 
			where no=#{no}
		]]>
	</select>
	
	
	 
	 <!-- 로그인 정보 가져오기(김영조) -->
	<select id="getUserInfo" parameterType="map" resultType="uservo">
	<![CDATA[
	select * 
	  FROM USERS 
	 WHERE ID=#{id} AND PASSWORD=#{password}
	]]>
	</select>
	
</mapper>