<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="notice">
	<select id="getList" resultType="noticevo">
		<![CDATA[
			select no, category, title, regDate
			from (	select n.no, c.category, n.title, to_char(n.regDate, 'yyyy-mm-dd hh:mi:ss') as regDate
					from categoryno c, notice n
					where c.no=n.categoryno)
			order by no desc
		]]>
	</select>
	
	<insert id="insert" parameterType="noticevo">
		<![CDATA[
			insert
			into notice
			values (notice_seq.nextval, #{title}, #{content}, sysdate, #{categoryNo})
		]]>
	</insert>
	
	<delete id="delete" parameterType="noticevo">
		<![CDATA[
			delete
			from notice
			where no=#{no}
		]]>
	</delete>
	
	<select id="getByNo" parameterType="long" resultType="noticevo">
		<![CDATA[
			select no, title, content
			from notice
			where no=#{no}
		]]>
	</select>
</mapper>